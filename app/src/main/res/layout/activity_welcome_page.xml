<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".starter.WelcomePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="391dp"
        android:layout_gravity="bottom"
        android:background="@drawable/container_shape"
        android:paddingLeft="28dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moklet Sport Stats"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="44dp"
            android:textColor="@color/green"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Record Statistik Pertandingan Futsal"
            android:fontFamily="@font/sf_pro_medium"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_marginTop="18dp"
            android:textColor="@color/textSf"
            />
<!--        Container Button     -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginTop="37dp"
            android:orientation="horizontal"
            android:gravity="center">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Welcome_Signup"
                android:layout_width="143dp"
                android:layout_height="match_parent"
                android:layout_marginRight="60dp"
                android:background="@drawable/signup_container"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/green"
                android:textSize="16dp"
                android:text="SignUp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Welcome_Login"
                android:layout_width="143dp"
                android:layout_height="match_parent"
                android:background="@drawable/login_container"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:text="Login"
                />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>