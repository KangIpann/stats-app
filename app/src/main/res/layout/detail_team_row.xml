    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bodyLayout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="sv_detailteam"
        android:paddingTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/detailteam_topbar_title">

        <ImageView
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:background="@drawable/placeholder_logotim"
            android:id="@+id/iv_logotim_detailteam"
            android:layout_gravity="center_horizontal"/>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>