                <TextView
                    android:id="@+id/tv13"
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingTop="11dp"
                    android:text="Jumlah Pemain:"
