                    android:background="@drawable/klik"
                    android:fontFamily="@font/poppins_semibold"
                    android:inputType="date"
                    android:paddingRight="12dp"
                    android:textAlignment="center"
                    app:layout_constraintStart_toEndOf="@+id/tv_45"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_kategoritim_detailteam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="32dp"
                app:layout_constraintTop_toBottomOf="@+id/cl_namatim_detailteam">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingTop="11dp"
                    android:text="Season:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_season_detailteam"
                    android:layout_width="189dp"
                    android:layout_height="40dp"
                    android:hint="klik icon ->"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/klik"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:fontFamily="@font/poppins_semibold"
                    android:inputType="date"
                    android:paddingRight="12dp"
                    android:textAlignment="center"
                    app:layout_constraintStart_toEndOf="@+id/textView11"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_coach_detailteam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/cl_kategoritim_detailteam">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingTop="11dp"
